    cout << "1.Cadastro de clientes. \n" << endl; 
    cout << "2.Funcionarios. \n" << endl;
    cout << "3.Sair. \n" << endl;
    
    cin >> opcao;
        
        switch(opcao){
    
            case 1:{
            
            cout << "Digite seu nome para ser cadastrado: " << endl;
            cin >> nome;
    
            cout << "Digite seu cpf: " << endl;
            cin >> cpf;
            
            Cliente p1(nome, cpf);
                
                p1.nomeCliente();
                
                p1.cpfCliente();
            
            break;
            }
            
            case 2: {
                
            }
            
            break;
            
            case 3:{
                
                
            }
            
            break;
            
            default:{}
            
        }
        
        
    }while(opcao != 0);
    
    
    
    
    return 0;
}
